<div class="banner">
  <h1 class="mx-2">WELLINGTON WALKS</h1>
</div>

<div class="walks container-fluid mt-2">
  <div class="row">
    <div class="col-sm-6">
      {{#each walks}}
      <div class="card mb-3">
        <img src="{{image}}" class="card-img-top" alt="trail image">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="{{this.path}}" class="btn btn-primary">Explore more</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>